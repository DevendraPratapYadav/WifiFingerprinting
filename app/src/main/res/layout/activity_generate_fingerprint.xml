<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Add a Landmark"
        android:textColor="#fff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="0dp"
        tools:textStyle="bold" />


    <EditText
        android:id="@+id/location"
        android:layout_width="368dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/heading1"
        android:layout_marginTop="22dp"
        android:background="#fff"
        android:hint="Enter landmark name"
        android:imeOptions="actionSend"
        android:inputType="text"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="40dp" />


    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Take a picture by clicking on the take Picture button Below!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="96dp"
        tools:textStyle="bold" />


    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/heading2"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="143dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/take"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:background="@drawable/shape"
            android:shadowColor="#BDBDBD"
            android:text="Take picture"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="364dp" />

        <Button

            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:layout_weight="50"
            android:background="@drawable/shape"
            android:shadowColor="#BDBDBD"
            android:text="Save fingerprint"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="432dp" />
    </LinearLayout>


</RelativeLayout>